{
  "bundle": {
    "containers": [
      {
        "action": "install",
        "includes": [
          "*.jar"
        ],
        "location": "bundle",
        "start-level": 1
      },
      {
        "action": "start",
        "includes": [
          "**/org.apache.aries.spifly.dynamic.bundle*.jar",
          "**/asm-*.jar",
          "**/slf4j-*.jar",
          "**/logback-*.jar"
        ],
        "location": "bundle",
        "start-level": 2
      },
      {
        "action": "start",
        "includes": [
          "**/openidm-system-*.jar",
          "**/org.apache.felix.log*.jar"
        ],
        "location": "bundle",
        "start-level": 3
      },
      {
        "action": "start",
        "includes": [
          "**/openidm-infoservice-*.jar",
          "**/openidm-datasource*.jar",
          "**/openidm-scr-starter-*.jar"
        ],
        "location": "bundle",
        "start-level": 4
      },
      {
        "excludes": [
          "**/org.apache.felix.scr-*.jar",
          "**/openidm-scheduler-*.jar"
        ],
        "includes": [
          "*.jar"
        ],
        "location": "bundle"
      },
      {
        "action": "start",
        "includes": [
          "**/openidm-scheduler-*.jar"
        ],
        "location": "bundle",
        "start-level": 11
      },
      {
        "action": "install",
        "includes": [
          "*.jar"
        ],
        "location": "&{idm.instance.dir}/bundle"
      }
    ],
    "default": {
      "action": "start",
      "start-level": 10
    }
  },
  "config.properties": "conf/config.properties",
  "system.properties": "conf/system.properties"
}
