{
    "name": "idm",
    "baseURI": "&{PLATFORM_IDM_URL|http://dfq-idm:8080}",
    "condition": "${find(request.uri.path, '(^/openidm)|(^/admin)|(^/upload)|(^/export)')}",
    "handler": {
        "type": "Chain",
